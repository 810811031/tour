page {
	background-color: rgb(240, 242, 245);
}

.wrapper {
	width: 100%;
}

.wrapper .userInfo {
    width: 100%;
    height: 270rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: #fff;
    box-sizing: border-box;
    border-bottom: 1rpx solid #e8e8e8;
}

.wrapper .userInfo image {
    height: 150rpx;
    width: 150rpx;
}

.wrapper .border image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    border: 4rpx solid #e8e8e8;
}

.wrapper .userInfo text {
    font-size: 26rpx;
    color: #9D9D9D;
    margin-top: 28rpx;
}

.wrapper .list-wrapper {
    background-color: #fff;
}

.wrapper .list {
    width: calc(100% - 56rpx);
    margin: 0 auto;
    height: 120rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #e8e8e8;
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.wrapper .list:nth-of-type(1) image:nth-of-type(1) {
    width: 51rpx;
    height: 40rpx;
}

.wrapper .list:nth-of-type(2) image:nth-of-type(1) {
    width: 47rpx;
    height: 47rpx;
}

.wrapper .list:nth-of-type(3) image:nth-of-type(1) {
    width: 49rpx;
    height: 49rpx;
}

.wrapper .list:nth-of-type(4) image:nth-of-type(1) {
    width: 52rpx;
    height: 50rpx;
}

.wrapper .list text {
    color: #222;
    font-size: 30rpx;
    font-weight: bold;
    display: inline-block;
    width: 150rpx;
    text-align: left;
    margin-left: 26rpx;
}

.wrapper .list image:nth-of-type(2) {
    width: 15rpx;
    height: 28rpx;
    margin-left: auto;
}